<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.agplay.tv">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.agplay.tv.activities.Playertest"
            android:theme="@style/AppThemeFull"/>
        <activity
            android:name="com.agplay.tv.activities.MyInfoActivity"
            android:theme="@style/AppThemeFull" />
        <activity
            android:name="com.agplay.tv.activities.RecentActivity"
            android:theme="@style/AppThemeFull" />
        <activity
            android:name="com.agplay.tv.activities.playingActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/playerTheme" />
        <activity
            android:name="com.agplay.tv.activities.PlaylistActivity"
            android:theme="@style/AppThemeFull" />
        <activity
            android:name="com.agplay.tv.activities.TrailerActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/playerTheme" />
        <activity
            android:name="com.agplay.tv.activities.PainelActivity"
            android:theme="@style/AppThemeFull" />
        <activity
            android:name="com.agplay.tv.activities.SearchActivity"
            android:theme="@style/AppThemeFull" />
        <activity
            android:name="com.agplay.tv.activities.ViewSeriesActivity"
            android:theme="@style/AppThemeFull" />
        <activity
            android:name="com.agplay.tv.activities.RegisterActivity"
            android:theme="@style/AppThemeFull" />
        <activity
            android:name="com.agplay.tv.activities.LogActivity"
            android:theme="@style/AppThemeFull"/>
        <activity
            android:name="com.agplay.tv.activities.playActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/playerTheme" />
        <activity
            android:name="com.agplay.tv.activities.SplashActivity"
            android:theme="@style/AppThemeFull" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.agplay.tv.activities.LoginActivity"
            android:theme="@style/PopupOverlay" />
        <activity
            android:name="com.agplay.tv.activities.ViewActivity"
            android:theme="@style/PopupOverlay" />
        <activity
            android:name="com.agplay.tv.activities.LacamentoActivity"
            android:theme="@style/PopupOverlay" />
    </application>

</manifest>